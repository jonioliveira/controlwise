
<div id="budgetItemsModal" class="fixed inset-0 flex items-center justify-center hidden bg-gray-800 bg-opacity-75">
  <div class="bg-white p-5 rounded shadow-lg w-2/3">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-xl font-semibold">Add Item</h2>
      <button id="closeModalButton" class="text-gray-500 hover:text-gray-800">&times;</button>
    </div>
    <div>
     <%= search_form_for @q, url: search_items_path, method: :get, remote: true, html: { id: 'searchForm' } do |f| %>
       <div class="flex mb-4">
         <%= f.search_field :name_cont, class: "flex-grow px-3 py-2 border rounded", id: "searchInput", placeholder: "Search..." %>
         <%= f.submit "Search", class: "hidden ml-2 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
       </div>
     <% end %>
      <table class="min-w-full leading-normal">
        <thead>
          <tr>
            <th class="py-3 border-b-2 border-gray-200 text-left text-xs font-semibold uppercase tracking-wider">
              Name
            </th>
            <th class="py-3 border-b-2 border-gray-200 text-left text-xs font-semibold uppercase tracking-wider">
              Quantity
            </th>
            <th class="py-3 border-b-2 border-gray-200 text-left text-xs font-semibold uppercase tracking-wider">
              Margin
            </th>
            <th class="py-3 border-b-2 border-gray-200 text-left text-xs font-semibold uppercase tracking-wider">
              Action
            </th>
          </tr>
        </thead>
        <tbody id="results" class="pt-3" >
          <!-- Results will be injected here by JavaScript -->
        </tbody>
      </table>
    </div>
    <div class="mt-4 flex justify-end">
      <button id="confirmButton" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
        Confirm
      </button>
    </div>
  </div>
</div>

