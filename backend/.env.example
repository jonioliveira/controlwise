# Server
PORT=8080
ENV=development

# Database
DB_HOST=localhost
DB_PORT=5433
DB_USER=controlwise
DB_PASSWORD=controlwise
DB_NAME=controlwise
DB_SSL_MODE=disable

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT (REQUIRED - must be at least 32 characters)
JWT_SECRET=your-super-secret-jwt-key-must-be-at-least-32-chars
JWT_EXPIRY=24h

# AWS S3 / Storage
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET=controlwise-files

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@controlwise.io

# Frontend URL
FRONTEND_URL=http://localhost:3000

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf
